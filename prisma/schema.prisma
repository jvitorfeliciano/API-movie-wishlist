generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  movies Movie[]

  @@map("genres")
}

model Movie {
  id             Int     @id @default(autoincrement())
  title          String  @unique
  description    String
  poster_picture String
  genres         Genre[]

  @@map("movies")
}
